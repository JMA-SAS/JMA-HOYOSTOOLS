<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_omni_sync" model="ir.module.category">
        <field name="name">B4B SYNC</field>
        <field name="description">Categoría para la gestión de sincronización entre instancias.</field>
        <field name="sequence">100</field>
    </record>

    <record id="group_omni_sync_user" model="res.groups">
        <field name="name">Usuario de Sincronización</field>
        <field name="category_id" ref="module_category_omni_sync"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_omni_sync_manager" model="res.groups">
        <field name="name">Administrador de Sincronización</field>
        <field name="category_id" ref="module_category_omni_sync"/>
        <field name="implied_ids" eval="[(4, ref('group_omni_sync_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>
