<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Heredada de Facturas -->
    <record id="view_move_form_inherit_sync" model="ir.ui.view">
        <field name="name">account.move.form.inherit.sync</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="move_type" invisible="1"/>
                <field name="is_synced" widget="boolean_toggle" invisible="move_type != 'out_invoice'"/>
                <field name="remote_order_ref" invisible="not is_synced or move_type != 'out_invoice'"/>
                <field name="is_remote_order" readonly="1" invisible="not is_remote_order"/>
            </xpath>
            
            <xpath expr="//notebook" position="inside">
                <page string="Resumen B4B SYNC" name="sync_summary" invisible="not is_synced or move_type != 'out_invoice'">
                    <div class="oe_title">
                        <h2>LOG DE SINCRONIZACIÓN REMOTA</h2>
                    </div>
                    <field name="sync_log" nolabel="1" colspan="4"/>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Vista Tree Heredada de Facturas -->
    <record id="view_out_invoice_tree_inherit_sync" model="ir.ui.view">
        <field name="name">account.out.invoice.tree.inherit.sync</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="is_synced" string="Sincronizado" widget="boolean_toggle" optional="show"/>
                <field name="remote_order_ref" string="OC Remota" optional="show"/>
            </field>
        </field>
    </record>

    <!-- Vista Tree Heredada de Órdenes de Compra -->
    <record id="purchase_order_tree_inherit_sync" model="ir.ui.view">
        <field name="name">purchase.order.tree.inherit.sync</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="is_synced" string="Sincronizado" widget="boolean_toggle" optional="show"/>
                <field name="sync_connection_name" string="Origen Sincronizado" optional="show"/>
            </field>
        </field>
    </record>

    <!-- Vista de Búsqueda Heredada de Facturas -->
    <record id="view_account_invoice_filter_inherit_sync" model="ir.ui.view">
        <field name="name">account.move.search.inherit.sync</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='late']" position="after">
                <separator/>
                <filter string="Sincronizados" name="synced" domain="[('is_synced', '=', True)]"/>
                <filter string="No Sincronizados" name="not_synced" domain="[('is_synced', '=', False)]"/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter string="Estado de Sincronización" name="group_by_sync" context="{'group_by': 'is_synced'}"/>
            </xpath>
        </field>
    </record>

    <!-- Vista de Búsqueda Heredada de Órdenes de Compra -->
    <record id="view_purchase_order_filter_inherit_sync" model="ir.ui.view">
        <field name="name">purchase.order.search.inherit.sync</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='starred']" position="after">
                <separator/>
                <filter string="Sincronizados" name="synced" domain="[('is_synced', '=', True)]"/>
                <filter string="No Sincronizados" name="not_synced" domain="[('is_synced', '=', False)]"/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter string="Estado de Sincronización" name="group_by_sync" context="{'group_by': 'is_synced'}"/>
                <filter string="Origen de Sincronización" name="group_by_sync_origin" context="{'group_by': 'sync_connection_name'}"/>
            </xpath>
        </field>
    </record>



    <!-- Vista Heredada de Órdenes de Compra -->
    <record id="purchase_order_form_inherit_sync" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.sync</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="is_synced" widget="boolean_toggle"/>
                <field name="sync_connection_name" invisible="not is_synced"/>
            </xpath>
        </field>
    </record>
</odoo>
