<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_pricelist_view_inherit_sync" model="ir.ui.view">
        <field name="name">product.pricelist.view.inherit.sync</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="sync_to_remote"/>
            </xpath>
        </field>
    </record>

    <record id="product_pricelist_view_tree_inherit_sync" model="ir.ui.view">
        <field name="name">product.pricelist.view.tree.inherit.sync</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="sync_to_remote" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>
</odoo>
